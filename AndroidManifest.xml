            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.huazi.project.hse.activity.RiskActivity"></activity>
        <activity android:name="com.huazi.project.hse.activity.PreviewActivity"></activity>
        <activity android:name="com.huazi.project.hse.activity.UploadActivity"></activity>
        
        <activity android:name="com.huazi.project.hse.activity.RestWebServiceActivity"></activity> 
